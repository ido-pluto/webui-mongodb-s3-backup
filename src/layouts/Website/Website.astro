---
import { WebForms } from '@astro-utils/forms/forms.js';
import '98.css';
import AppBar from '../../components/AppBar.astro';
import Alert from '../../components/Alert.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='description' content='Astro description' />
        <meta name='viewport' content='width=device-width' />
        <link rel='icon' type='image/png' href='/favicon.png' />
        <meta name='generator' content={Astro.generator} />
        <title>MA | {title}</title>
    </head>
    <body>
        <WebForms>
            {!process.env.WEBSITE_PASSWORD ? <Alert title='Password not set' closeAfter={0}>set WEBSITE_PASSWORD in your environment variables</Alert> : null}
            <AppBar />
            <slot />
        </WebForms>
    </body>
</html>

<style is:global>
    body {
        margin: 0;
        padding: 0;
        background: #c0c0c0;
        zoom: 1.6;
    }

    * {
        font-family: PixelifySans, 'Courier New', Courier, monospace !important;
    }

    @font-face {
        font-family: PixelifySans;
        src: url(/PixelifySans-VariableFont_wght.ttf);
    }
</style>
